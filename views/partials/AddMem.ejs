<form action="/customers" method="post">
    <div
      class="modal fade"
      id="transferBackdropNav"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="staticBackdropLabel">
              Add New Member
            </h4>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>
  
          <div class="modal-body">
           
            <div class="form-group">
              <label for="amount" class="fw-bold mt-3">Enter Amount:</label>
              <input
                type="number"
                name="currentBal"
                class="form-control mt-2"
                placeholder="Amount in INR"
                required
              />
          </div>
          <div class="form-group">
            <label for="name" class="fw-bold mt-3">Enter Name:</label>
            <input
              type="string"
              name="name"
              class="form-control mt-2"
              required
            />
          </div>
          <div class="form-group">
            <label for="email" class="fw-bold mt-3">Enter Email:</label>
            <input
              type="string"
              name="email"
              class="form-control mt-2"
              required
            />
          </div>
          <div class="form-group">
            <label for="gender" class="fw-bold mt-3">Gender:</label>
            <input
              type="string"
              name="gender"
              class="form-control mt-2"
              required
            />
          </div>
  
          <div class="modal-footer">
            <button type="button" class="btn btn-primary " data-bs-dismiss="modal">
              Cancel
            </button>
            <a href="/customer" type="button">
                <div class="form-group">
                <input
                    type="submit"
                    name="submit"
                    class="btn btn-md btn-danger"
                    value="Add Member"
                />
                </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </form>
  